{
    "workbench.colorTheme": "Monokai Dimmed",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Chromium, UseTab: Never, IndentWidth: 4, TabWidth: 4, BinPackArguments: AlwaysOnePerLine}",
    "files.exclude": {
        "**/.git": false
    },
    "files.autoSave": "onFocusChange",
    "python.defaultInterpreterPath": "/bin/python3",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.largeFileOptimizations": false,
    "redhat.telemetry.enabled": false,
    "[xml]": {
        "editor.defaultFormatter": "mikeburgh.xml-format"
    },
    "editor.fontFamily": "'Cascadia Code', 'Cascadia Mono'",
    "terminal.integrated.fontLigatures.enabled": true,
    "editor.fontLigatures": true
}